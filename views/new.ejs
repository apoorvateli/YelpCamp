<% include partials/header %>

<div class="container">
  <div class="row">

    <div class="col-xs-12">

      <h1 style="text-align: center; margin: 20px;">Create a new campground</h1>
      <!-- Submit the data to /campgrounds -->
      <!-- <div style="width: 40%; margin: 25px auto;"> -->
      <div class="col-sm-6 col-sm-offset-3">

        <form action="/campgrounds" method="post">
          <div class="form-group">
            <input class="form-control input-lg" type="text" name="name" placeholder="name of the campground" required>
          </div>
          <div class="form-group">
            <input class="form-control input-lg" type="text" name="image" placeholder="image url" required>
          </div>
          <div class="form-group">
            <!-- <input class="form-control input-lg" type="text" name="description" placeholder="description" required> -->
            <textarea name="description" rows="8" cols="50" placeholder="description" class="form-control input-lg"></textarea>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg" type="submit">Submit</button>
          </div>
        </form>

        <a href="/campgrounds">Go back</a>
      </div> <!-- /.col-sm-6 -->

    </div> <!-- /.col-xs-12 -->

  </div>
</div> <!-- /.container -->

<% include partials/footer %>
