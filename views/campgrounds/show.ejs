<% include ../partials/header %>

<div class="container">
  <div class="row">
    <div class="col-md-3">
      <p class="lead">goCamping</p>
      <div class="list-group">
        <div class="list-group-item active">Info 1</div>
        <div class="list-group-item">Info 2</div>
        <div class="list-group-item">Info 3</div>
      </div>
    </div>
    <div class="col-md-9">
      <div class="thumbnail">
        <img src="<%= campground.image %>" class="img-responsive" alt="campground image">
        <div class="caption">
          <h4 class="pull-right">$9.00/night</h4>
          <h4><a href="#"><%= campground.name %></a></h4>
          <p><%= campground.description %></p>
        </div>
      </div> <!-- end of .thumbnail -->
      <div class="well">
        <div class="text-right">
          <a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success btn-sm">Add New Comment</a>
        </div>
        <hr>
        <% campground.comments.forEach(function(comment) { %>
          <div class="row">
            <div class="col-md-12">
              <strong><%= comment.author %></strong>
              <span class="pull-right">10 days ago</span>
              <p><%= comment.text %></p>
            </div>
          </div>
        <% }); %>
      </div>
      <a href="/campgrounds" class="btn btn-primary btn-sm">Go Back</a>
    </div>
  </div>

</div>

<% include ../partials/footer %>
