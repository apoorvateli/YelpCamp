<% include ../partials/header %>

<div class="container">
  <div class="row">

    <div class="col-xs-12">

      <h1 style="text-align: center; margin: 20px;">Add new comment to <%= campground.name %></h1>
      <!-- Submit the data to /campgrounds/:id/comments -->
      <!-- <div style="width: 40%; margin: 25px auto;"> -->
      <div class="col-sm-6 col-sm-offset-3">

        <form action="/campgrounds/<%= campground._id %>/comments" method="post">
          <div class="form-group">
            <input class="form-control input-lg" type="text" name="comment[text]" placeholder="text" required>
          </div>
          <div class="form-group">
            <input class="form-control input-lg" type="text" name="comment[author]" placeholder="author name" required>
          </div>
          <div class="form-group">
            <button class="btn btn-primary btn-block btn-lg" type="submit">Submit</button>
          </div>
        </form>

        <a href="/campgrounds">Go back</a>
      </div> <!-- /.col-sm-6 -->

    </div> <!-- /.col-xs-12 -->

  </div>
</div> <!-- /.container -->

<% include ../partials/footer %>
